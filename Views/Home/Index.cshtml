@{
    ViewData["Title"] = "Home Page";
}

<div class="text-center">
    @if (!string.IsNullOrEmpty(ViewBag.Username))
    {
        <h1 class="display-4">Welcome, @ViewBag.Username!</h1>
    }
    else
    {
        <h1 class="display-4">Welcome!</h1>
    }
</div>


<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1" />
    <title>Create New Employee Button</title>

    <style>
        body {
            font-family: 'Segoe UI', Tahoma, Geneva, Verdana, sans-serif;
            background-color: #f0f4f8;
            display: flex;
            justify-content: center;
            align-items: center;
            height: 100vh;
            margin: 0;
        }

        a.button-link {
            display: inline-block;
            background: gray;
            color: white;
            font-weight: 600;
            padding: 14px 28px;
            text-decoration: none;
            border-radius: 8px;
            box-shadow: 0 4px 12px rgba(51, 102, 255, 0.4);
            transition: background 0.3s ease, box-shadow 0.3s ease;
            user-select: none;
            font-size: 1.125rem;
        }

            a.button-link:hover,
            a.button-link:focus {
                background: linear-gradient(135deg, #3366ff, #5a8dee);
                box-shadow: 0 6px 18px rgba(51, 102, 255, 0.6);
                outline: none;
            }

            a.button-link:active {
                transform: translateY(2px);
                box-shadow: 0 3px 9px rgba(51, 102, 255, 0.5);
            }
      
    </style>

</head>
<body>
    <a href="/Employee/Create" target="_blank" class="button-link" rel="noopener noreferrer">
        Create New Employee
    </a>
</body>
</html>



<style> 
    body {
        background-color: black;
        color: white;
    }

    h1, p {
        margin-bottom: 40px;
    }

</style>



